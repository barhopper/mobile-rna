{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["jest", "react", "react-native"],
  "extends": [
    "eslint:recommended",
    "eslint-config-prettier",
    "plugin:react/recommended"
  ],
  "env": {
    "node": true,
    "browser": true,
    "jest": true,
    "react-native/react-native": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "Platform": "readonly"
  },
  "rules": {
    "strict": 0,
    "react/display-name": 0,
    "react/prop-types": 0
  }
}
